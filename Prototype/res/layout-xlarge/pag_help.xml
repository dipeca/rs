<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dialog="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_black"
    android:fitsSystemWindows="true"
    android:orientation="horizontal"
    tools:context=".BookActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="498dp"
            android:layout_height="80dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="8dp" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/backoldpaper" />

            <LinearLayout
                android:layout_width="498dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/goToPrevPageHelp"
                        style="@style/ButtonText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:src="@drawable/ic_action_prev" />

                    <ImageButton
                        android:id="@+id/goToNextPageHelp"
                        style="@style/ButtonText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:src="@drawable/ic_action_play" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textPag1"
                    style="@style/StoryBlock"
                    android:layout_width="248dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/container_dropshadow"
                    android:padding="16dp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="498dp"
            android:layout_height="108dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="8dp" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:src="@drawable/backoldpaper" />

            <LinearLayout
                android:layout_width="498dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageButton
                        android:id="@+id/help"
                        style="@style/ButtonText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:src="@drawable/ic_action_help" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textPag2"
                    style="@style/StoryBlock"
                    android:layout_width="248dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/container_dropshadow"
                    android:padding="16dp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="498dp"
            android:layout_height="348dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="8dp" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:src="@drawable/backoldpaper" />

            <LinearLayout
                android:layout_width="498dp"
                android:layout_height="wrap_content"
                android:background="@drawable/backoldpaper"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/helpObjects"
                        style="@style/ButtonText"
                        android:layout_width="160dp"
                        android:layout_height="320dp"
                        android:layout_margin="12dp"
                        android:background="@drawable/help_objects" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textPag3"
                    style="@style/StoryBlock"
                    android:layout_width="248dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/container_dropshadow"
                    android:padding="16dp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageButton
            android:id="@+id/goToNextPage"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="12dp"
            android:background="@drawable/button_back"
            android:src="@drawable/ic_action_play"
            android:text="@string/next" />
    </RelativeLayout>

</LinearLayout>