<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dialog="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:fitsSystemWindows="true"
    android:tag="Cabana"
    tools:context=".BookActivity" >

    <ImageView
        android:id="@+id/pag1ImageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/clickable"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/pag1ImageViewAmuleto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textPag1"
        style="@style/StoryBlock"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/container_dropshadow"
        android:padding="16dp"
        android:text="@string/pag1" />

    <ImageView
        android:id="@+id/pag1Amuleto"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_centerInParent="true"
        android:background="@drawable/back"
        android:scaleType="fitXY"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/pag1ImageViewBirds"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="200dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/textPag1_2"
        style="@style/StoryBlock"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/container_dropshadow" />

    <ImageButton
        android:id="@+id/goToNextPage"
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="12dp"
        android:background="@drawable/button_back"
        android:src="@drawable/ic_action_play"
        android:text="@string/next" />

    <ImageButton
        android:id="@+id/goToPrevPage"
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="12dp"
        android:background="@drawable/button_back"
        android:src="@drawable/ic_action_prev"
        android:text="@string/next" />

    <ImageView
        android:id="@+id/icon1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignRight="@+id/goToNextPage"
        android:layout_marginTop="8dp"
        android:background="@drawable/imagebg"
        android:scaleType="fitXY" 
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/icon2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignRight="@+id/goToNextPage"
        android:layout_below="@+id/icon1"
        android:layout_marginTop="8dp"
        android:background="@drawable/imagebg"
        android:scaleType="fitXY"
        android:visibility="invisible" />

    <com.dipeca.bookactivity.DialogBox
        android:id="@+id/dialog"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/goToNextPage"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp" />

</RelativeLayout>