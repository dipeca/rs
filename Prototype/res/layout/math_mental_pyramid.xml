    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/top"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/textbox"
            android:fontFamily="sans"
            android:gravity="center_horizontal"
            android:maxLength="3"
            android:textColor="#444444"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/middle1"
            android:layout_width="30dp"
            android:layout_height="36dp"
            android:background="@drawable/textbox"
            android:fontFamily="sans"
            android:gravity="center_horizontal"
            android:maxLength="3"
            android:textColor="#444444"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/middle2"
            android:layout_width="30dp"
            android:layout_height="36dp"
            android:background="@drawable/textbox"
            android:fontFamily="sans"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:maxLength="3"
            android:nextFocusDown="@+id/base1"
            android:nextFocusForward="@+id/base1"
            android:textColor="#444444"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/middleInfo"
            android:layout_width="24dp"
            android:layout_height="36dp"
            android:fontFamily="sans"
            android:gravity="center_horizontal"
            android:text="+"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/base1"
            android:layout_width="28dp"
            android:layout_height="36dp"
            android:background="@drawable/textbox"
            android:fontFamily="sans"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:maxLength="3"
            android:nextFocusDown="@+id/base3"
            android:textColor="#444444"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/base2"
            android:layout_width="28dp"
            android:layout_height="36dp"
            android:background="@drawable/textbox"
            android:fontFamily="sans"
            android:gravity="center_horizontal"
            android:maxLength="3"
            android:textColor="#444444"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/base3"
            android:layout_width="28dp"
            android:layout_height="36dp"
            android:background="@drawable/textbox"
            android:fontFamily="sans"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:maxLength="3"
            android:nextFocusLeft="@+id/base1"
             android:nextFocusDown="@+id/base1"
            android:textColor="#444444"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/baseInfo"
            android:layout_width="24dp"
            android:layout_height="36dp"
            android:fontFamily="sans"
            android:gravity="center_horizontal"
            android:text="+"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>