<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dialog="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:fitsSystemWindows="true"
    android:tag="Cabana"
    tools:context=".BookActivity" >

    <ImageView
        android:id="@+id/ivMain"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/ivSmall"
        android:layout_width="460dp"
        android:layout_height="420dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="120dp"
        android:background="@drawable/imagebg"
        android:scaleType="fitXY"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/ivSmallHidden"
        android:layout_width="460dp"
        android:layout_height="420dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="120dp"
        android:background="@drawable/imagebg"
        android:scaleType="fitXY"
        android:visibility="invisible" />

    
    <TextView
        android:id="@+id/textPag1"
        style="@style/StoryBlock"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/container_dropshadow"
        android:padding="16dp"
        android:text="@string/pag1" />

    <TextView
        android:id="@+id/textPag1_2"
        style="@style/StoryBlock"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/container_dropshadow" />

    <ImageButton
        android:id="@+id/goToNextPage"
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="12dp"
        android:background="@drawable/button_back"
        android:src="@drawable/ic_action_play"
        android:text="@string/next" />

    <ImageButton
        android:id="@+id/goToPrevPage"
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="12dp"
        android:background="@drawable/button_back"
        android:src="@drawable/ic_action_prev"
        android:text="@string/next" />

</RelativeLayout>