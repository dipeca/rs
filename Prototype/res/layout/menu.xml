<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="96dp"
            android:layout_height="64dp"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/stopSound"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnIntendS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tirar foto" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/old_paper_torn" >

            <TextView
                android:id="@+id/textPag1"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginLeft="8dp"
                android:fontFamily="sans"
                android:text="@string/path"
                android:textColor="#444444"
                android:textSize="20sp"
                android:textStyle="bold" />

            <fragment
                android:id="@+id/journey"
                android:name="com.dipeca.prototype.JourneySoFar"
                android:layout_width="198dp"
                android:layout_height="160dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="34dp"
                android:layout_marginBottom="8dp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_star" />

            <TextView
                android:id="@+id/pointsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans"
                android:paddingLeft="2dp"
                android:paddingTop="4dp"
                android:text="100"
                android:textColor="#444444"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/points"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:fontFamily="sans"
                android:paddingLeft="2dp"
                android:paddingTop="4dp"
                android:text="Pontos"
                android:textColor="#444444"
                android:textSize="20sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <TextView
            android:id="@+id/textPag2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans"
            android:text="Objetos"
            android:textColor="#444444"
            android:textSize="20sp"
            android:textStyle="bold" />

        <GridView
            android:id="@+id/gridView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnWidth="100dp"
            android:gravity="center"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth" >
        </GridView>
    </LinearLayout>

</ScrollView>