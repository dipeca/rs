<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Border -->

    <item
        android:left="2dp"
        android:top="2dp">
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <solid android:color="#FFFFFFFF" />

            <stroke
                android:width="1dp"
                android:color="#FF000000" />
        </shape>
    </item>

</layer-list>